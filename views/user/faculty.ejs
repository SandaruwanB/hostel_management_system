<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stay Grid | Faculties</title>
    <%- include('../components/externalImports') %>
</head>
<body class="min-h-screen">
    <%- include('./components/navbar.ejs') %>
    <div class="ml-0 md:ml-[300px] p-3">
        <h1 class="text-2xl font-bold pl-5 pt-5">Faculties</h1>
        <div class="flex justify-between p-5 mt-7">
            <div>
                <a href="/user/faculty/add" class="bg-blue-800 px-7 py-2 rounded text-white cursor-pointer">Create</a>
            </div>
            <div>
                <input type="text" class="border bg-gray-200 focus:outline-none px-3 py-1 rounded" placeholder="Search">
            </div>
        </div>
        <div class="px-5">
            <table class="w-full table-auto">
                <thead class="bg-gray-400">
                    <th class="text-left p-2">Name</th>
                    <th class="text-left p-2">Location</th>
                    <th class="text-center p-2">HOD Name</th>
                    <th class="text-center p-2">HOD Contact</th>
                    <th></th>
                </thead>
                <tbody>
                    <% if (faculties.length > 0) { %>
                        <% for (const faculty of faculties){ %>
                            <tr class="bg-gray-100 hover:bg-gray-200 cursor-pointer">
                                <td class="text-left p-2"><%= faculty.name %></td>
                                <td class="text-left p-2"><%= faculty.location %></td>
                                <td class="text-center p-2"><%= faculty.hod_name %></td>                            
                                <td class="text-center p-2"><%= faculty.hod_cantact %></td>
                            </tr>
                        <% } %>
                    <% } else { %>
                        <tr>
                            <td colspan="5" class="text-center p-2">No faculties to show <a href="/user/faculty/add" class="text-blue-500 hover:underline">add faculty?</a></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <%- include('../components/bottomIncludes.ejs') %>
</body>
</html>